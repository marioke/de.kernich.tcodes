<mvc:View
    controllerName="de.kernich.tcode.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'de/kernich/tcode/model/formatter'
	}"
>
    <Page
        id="page"
        showFooter="{= ${local>/selectedTag} === 'CUSTOM' }"
        busy="{local>/busy}"
        busyIndicatorDelay="0"
    >
        <customHeader>
            <OverflowToolbar>
                <core:Icon
                    src="sap-icon://sap-ui5"
                    size="3rem"
                />
                <Title text="T-Code Quick Finder" />
                <ToolbarSpacer />
                <SearchField
                    placeholder="Search for transaction..."
                    liveChange=".onSearch"
                    width="500px"
                    id="IdSearchField"
                />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://action-settings"
                    press=".onOpenSettings"
                    tooltip="Open settings"
                    text="Settings"
                    type="Transparent"
                />
                <ToolbarSeparator />
                <Button
                    icon="img/github-brands.svg"
                    text="View on GitHub"
                    press=".onOpenGitHub"
                    tooltip="GitHub Repository"
                />
                <Button
                    icon="img/linkedin-brands.svg"
                    text="Mario Kernich"
                    press=".onOpenLinkedIn"
                    tooltip="LinkedIn Profile"
                />
            </OverflowToolbar>
        </customHeader>
        <VBox>
            <IconTabBar
                id="iconTabBar"
                select=".onIconTabBarSelect"
                applyContentPadding="false"
                headerMode="Inline"
                selectedKey="{local>/selectedTag}"
                upperCase="true"
            >
                <items>
                    <IconTabFilter
                        key="ALL"
                        text="{= 'All (' + ${local>/allCount} + ')' }"
                        icon="sap-icon://multiselect-all"
                    />
                    <IconTabFilter
                        key="GENERAL"
                        text="{= 'GENERAL (' + ${local>/generalCount} + ')' }"
                        icon="sap-icon://world"
                    />
                    <IconTabFilter
                        key="UI5"
                        text="{= 'UI5/FIORI (' + ${local>/ui5Count} + ')' }"
                        icon="sap-icon://popup-window"
                    />
                    <IconTabFilter
                        key="ABAP"
                        text="{= 'ABAP (' + ${local>/abapCount} + ')' }"
                        icon="sap-icon://syntax"
                    />
                    <IconTabFilter
                        key="EWM"
                        text="{= 'SAP EWM (' + ${local>/ewmCount} + ')' }"
                        icon="sap-icon://business-objects-explorer"
                    />
                    <IconTabFilter
                        key="ERP"
                        text="{= 'SAP ERP (' + ${local>/erpCount} + ')' }"
                        icon="sap-icon://factory"
                    />
                    <IconTabFilter
                        key="FI"
                        text="{= 'SAP FI (' + ${local>/fiCount} + ')' }"
                        icon="sap-icon://money-bills"
                    />
                    <IconTabFilter
                        key="CUSTOM"
                        text="{= 'CUSTOM (' + ${local>/customCount} + ')' }"
                        icon="sap-icon://wrench"
                    />
                </items>
            </IconTabBar>
            <Table
                id="transactionTable"
                items="{ path: '/' }"
                mode="None"
                selectionChange=".onSelectionChange"
                itemPress=".onRowPress"
                noDataText="No transactions found"
            >
                <contextMenu>
                    <Menu>
                        <MenuItem
                            text="Edit"
                            icon="sap-icon://edit"
                            press=".onEditTransaction"
                            visible="{= ${tags}.indexOf('CUSTOM') !== -1 }"
                        />
                    </Menu>
                </contextMenu>
                <columns>
                    <Column
                        width="{= ${device>/system/desktop} ? '200px' : 'auto' }"
                    >
                        <Text text="Transaction code" />
                    </Column>
                    <Column
                        width="{= ${device>/system/desktop} ? '300px' : 'auto' }"
                    >
                        <Text text="Title" />
                    </Column>
                    <Column visible="{= ${device>/system/desktop} }">
                        <Text text="Description" />
                    </Column>
                    <Column hAlign="Right" />
                </columns>
                <items>
                    <ColumnListItem
                        type="Active"
                        press=".onRowPress"
                    >
                        <cells>
                            <Text text="{= ${tcode}.toUpperCase() }" />
                            <Text text="{ path: 'title' }" />
                            <Text
                                text="{ path: 'description' }"
                                visible="{= ${device>/system/desktop} }"
                            />
                            <HBox justifyContent="End">
                                <Button
                                    icon="{= ${favorite} ? 'sap-icon://favorite' : 'sap-icon://unfavorite' }"
                                    press=".onToggleFavorite"
                                    type="Transparent"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <footer>
            <OverflowToolbar>
                <Button
                    id="deleteButton"
                    icon="sap-icon://delete"
                    press=".onDeleteTransaction"
                    tooltip="Delete selected transactions"
                    text="Delete"
                    type="Reject"
                    enabled="false"
                />
                <Button
                    icon="sap-icon://add-document"
                    press=".onAddTransaction"
                    tooltip="Add new transaction"
                    text="New"
                    type="Ghost"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
